<div class="col-md-10 col-md-offset-1">
    <table class="table table-bordered table-hover "
           style="overflow: scroll; font-size: 14px; margin-top: 20px;text-align:center;">
           <thead>
               <tr>
                   <th style="text-align:center">Номер договора</th>
                   <th style="text-align:center">Номер счета</th>
                   <th style="text-align:center">Тип</th>
                   <th style="text-align:center">Баланс</th>
                   <th style="text-align:center">Имя</th>
                   <th style="text-align:center">Действия</th>
               </tr>
           </thead>
        <tbody>
          {{#each clients}}
            <tr><td rowspan="3">{{this.agreement}}</td></tr>
            <tr>
                <td>{{this.c_account_number}}</td>
                <td>current {{this.c_active_type}}</td>
                <td>{{this.c_balance}}</td>
                <td>{{this.c_name}}</td>
                <td rowspan="2">
                    <form id="getMoney" class="getMoney">
                        <input type="hidden" name="agreement" value={{this.agreement}}>
                        <button type="submit" id="get" class="btn btn-success" title="Сash withdrawal">
                            <i class="fa fa-credit-card" aria-hidden="true"></i>
                        </button>
                    </form>
                    <form id="receivePercent" class="receivePercent">
                      <input type="hidden" name="agreement" value={{this.agreement}}>
                      <input type="hidden" name="client_current" value={{this.c_account_number}}>
                      <input type="hidden" name="client_percent" value={{this.p_account_number}}>
                      <button type="submit" id="get" class="btn btn-warning" title="Receive percent">
                        <i class="fa fa-percent" aria-hidden="true"></i>
                      </button>
                    </form>
                </td>
            </tr>
            <tr>
                <td>{{this.p_account_number}}</td>
                <td>percent {{this.p_active_type}}</td>
                <td>{{this.p_balance}}</td>
                <td>{{this.p_name}}</td>
            </tr>
          {{/each}}
        </tbody>
    </table>
    <div class="errors" id="error"></div>
</div>

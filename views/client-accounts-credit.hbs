<div class="col-md-10 col-md-offset-1">
    <table class="table table-bordered table-hover "
           style="overflow: scroll; font-size: 14px; margin-top: 20px;text-align:center;">
           <thead>
               <tr>
                   <th style="text-align:center">Номер договора</th>
                   <th style="text-align:center">Номер счета</th>
                   <th style="text-align:center">Тип</th>
                   <th style="text-align:center">Баланс</th>
                   <th style="text-align:center">Имя</th>
                   <th style="text-align:center">Действия</th>
               </tr>
           </thead>
        <tbody>
          {{#each clients}}
            <tr><td rowspan="3">{{this.agreement}}</td></tr>
            <tr>
                <td>{{this.c_account_number}}</td>
                <td>current {{this.c_active_type}}</td>
                <td>{{this.c_balance}}</td>
                <td>{{this.c_name}}</td>
                <td rowspan="3">
                      <a href=/credits/calendar/{{this.agreement}} type="submit" id="get" class="btn btn-warning" title="Receive percent">
                        <i class="fa fa-calendar-check-o" aria-hidden="true"></i>
                      </a>
                      <button type="button" class="btn btn-info" data-toggle="modal" data-target=#myModal{{this.agreement}}>
                        <i class="fa fa-sign-in" aria-hidden="true"></i>
                      </button>
                </td>
            </tr>
            <tr>
                <td>{{this.p_account_number}}</td>
                <td>percent {{this.p_active_type}}</td>
                <td>{{this.p_balance}}</td>
                <td>{{this.p_name}}</td>
            </tr>
            <div id=myModal{{this.agreement}} class="modal fade" role="dialog">
              <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Log in</h4>
                  </div>
                  <div class="modal-body" style="min-height: 65px;">
                    <div class="col-md-12">
                      <form action="/credits/login" method="post">
                        <input type="hidden" name="id" value={{this.idagreement_credit}} />
                        <div class="col-md-5">
                          <input type="password" class="form-control" name="pin" minlength="4" maxlength="4" pattern="[0-9]{4}" required>
                        </div>
                        <div class="col-md-2">
                          <button type="submit" class="btn btn-success">
                              <i class="fa fa-share-square-o" aria-hidden="true"></i>
                          </button>
                        </div>
                      </form>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  </div>
                </div>

              </div>
            </div>
          {{/each}}
        </tbody>
    </table>
    <div class="errors" id="error"></div>
</div>
